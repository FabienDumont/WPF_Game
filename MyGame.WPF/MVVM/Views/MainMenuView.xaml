<UserControl x:Class="MyGame.WPF.MVVM.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyGame.WPF.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <Button Content="New Game"
                Width="120"
                Style="{StaticResource ButtonTheme}"
                Command="{Binding CreateCharacterNavigateCommand}"/>
        <Button Content="Load Game"
                Width="120"
                Margin="0 20 0 0"
                Style="{StaticResource ButtonTheme}"
                Command="{Binding LoadGameCommand}"/>
    </StackPanel>
</UserControl>
